<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cadastrar novo cômodo:"
        android:id="@+id/newRoom_textview"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newRoom_editText"
        android:textColorHighlight="@color/textColorHighlight"
        android:textColor="@color/AppThemeColor"
        android:shadowColor="@android:color/white"
        android:layout_alignTop="@+id/btn_newRoom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btn_newRoom"
        android:layout_toStartOf="@+id/btn_newRoom"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:hint="Nome"
        android:singleLine="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:id="@+id/btn_newRoom"
        android:background="@color/AppThemeColor"
        android:textColor="@color/WHITE"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/newRoom_textview"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cômodos cadastrados:"
        android:textStyle="bold"
        android:id="@+id/rooms_textview"
        android:layout_margin="10dp"
        android:layout_below="@id/newRoom_editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rooms_listView"
        android:divider="@color/lists_purple"
        android:dividerHeight="1dp"
        android:layout_below="@id/rooms_textview"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>