<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">

    <ImageView
        android:id="@+id/bill_list_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nome"
        android:textStyle="bold"
        android:textColor="@color/AppThemeColor"
        android:id="@+id/bill_list_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/bill_list_image"
        android:layout_toEndOf="@+id/bill_list_image"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Potencia"
        android:id="@+id/bill_list_pot"
        android:textColor="@color/AppThemeColor"
        android:layout_below="@+id/bill_list_cost"
        android:layout_toRightOf="@+id/bill_list_image"
        android:layout_toEndOf="@+id/bill_list_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tempo médio de uso diário"
        android:id="@+id/bill_list_time"
        android:textColor="@color/AppThemeColor"
        android:layout_below="@+id/bill_list_pot"
        android:layout_toRightOf="@+id/bill_list_image"
        android:layout_toEndOf="@+id/bill_list_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Consumo"
        android:id="@+id/bill_list_consume"
        android:textColor="@color/AppThemeColor"
        android:layout_below="@+id/bill_list_time"
        android:layout_toRightOf="@+id/bill_list_image"
        android:layout_toEndOf="@+id/bill_list_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Comodo"
        android:id="@+id/bill_list_comodo"
        android:textColor="@color/AppThemeColor"
        android:layout_below="@+id/bill_list_time"
        android:layout_toRightOf="@+id/bill_list_consume"
        android:layout_toEndOf="@+id/bill_list_consume" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Quantidade"
        android:id="@+id/bill_list_number"
        android:textColor="@color/AppThemeColor"
        android:layout_below="@+id/bill_list_time"
        android:layout_toRightOf="@+id/bill_list_comodo"
        android:layout_toEndOf="@+id/bill_list_comodo"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gasto"
        android:id="@+id/bill_list_cost"
        android:textColor="@color/RED"
        android:layout_below="@+id/bill_list_name"
        android:layout_toRightOf="@+id/bill_list_image"
        android:layout_toEndOf="@+id/bill_list_image" />

</RelativeLayout>